<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobo hotel Booking</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include("_header.ejs") %>

    <section class="hero">
      <div class="backdrop"></div>
      <h1>Welcome to Lobo Hotel</h1>
      <p>Experience luxury and comfort like never before.</p>
      <a href="/#rooms" class="cta">Book Now</a>
    </section>

    <section id="rooms">
      <h2>Our Rooms</h2>
      <div class="rooms-container">
        <% locals.rooms.forEach(room=>{ %>

        <div class="room">
          <img src="<%= room.image_url %>" alt="<%= room.label %>" />
          <h3><%= room.room_type %> - <%= room.label %></h3>
          <p>KSH. <%= room.price_per_night %> Per Night</p>
          <a href="/book?id=<%=room.room_id%>&type=room">Book Now</a>
        </div>

        <% }) %>
      </div>
    </section>

    <section>
      <h2>Our Spots</h2>
      <div class="spots-container">
        <!-- forEach spot -- div.spot  -->
        <% locals.spots.forEach(spot=>{ %>

        <div class="spot">
          <img src="<%= spot.image_url %>" alt="<%= spot.spot_id %> spot" />
          <h3><%= spot.spot_id %> - <span> <%= spot.label %> </span></h3>
          <p>
            Capacity: <%= spot.capacity_range %> || Price per day: <%=
            spot.price %>
          </p>
          <a href="/book?id=<%= spot.spot_id %>&type=spot"> Book Now</a>
        </div>

        <% }) %>
      </div>
    </section>
  </body>
</html>
